      // Ïä§ÌÅ¨Î°§ Ïù∏ÎîîÏºÄÏù¥ÌÑ∞ Í∏∞Îä•
      function updateScrollIndicator() {
        const container = document.querySelector('#container');
        const containerRect = container.getBoundingClientRect();
        const scrollTop = container.scrollTop;
        const containerHeight = container.clientHeight;

        // ÌòÑÏû¨ Î≥¥Ïù¥Îäî ÏÑπÏÖò Í≥ÑÏÇ∞
        let currentSection = 0;
        sections.forEach((section, index) => {
          const sectionTop = section.offsetTop - container.offsetTop;
          const sectionBottom = sectionTop + section.offsetHeight;

          if (
            scrollTop >= sectionTop - containerHeight * 0.5 &&
            scrollTop < sectionBottom - containerHeight * 0.5
          ) {
            currentSection = index;
          }
        });

        // Ïù∏ÎîîÏºÄÏù¥ÌÑ∞ ÏóÖÎç∞Ïù¥Ìä∏
        indicatorDots.forEach((dot, index) => {
          dot.classList.toggle('active', index === currentSection);
        });

        // ÏÑπÏÖò ÌÉÄÏù¥ÌãÄ ÏóÖÎç∞Ïù¥Ìä∏
        sectionTitles.forEach((title, index) => {
          title.classList.toggle('active', index === currentSection);
        });

        // ÏÑπÏÖò 2 Ïï†ÎãàÎ©îÏù¥ÏÖò Ïû¨Ïã§Ìñâ (Ï¶âÏãú ÏãúÏûë)
        if (currentSection === 1) {
          triggerSection2Animation();
        }
      }

      // ÏÑπÏÖò 2 Ïï†ÎãàÎ©îÏù¥ÏÖò Ïû¨Ïã§Ìñâ Ìï®Ïàò
      function triggerSection2Animation() {
        const gridItems = document.querySelectorAll('.grid-item');
        gridItems.forEach((item, index) => {
          item.style.animation = 'none';
          item.offsetHeight; // Î¶¨ÌîåÎ°úÏö∞ Ìä∏Î¶¨Í±∞
          item.style.animation = `fadeInUp 0.8s ease-out ${0.2 + index * 0.2}s forwards`;
        });
      }

      // Ïù∏ÎîîÏºÄÏù¥ÌÑ∞ ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏
      indicatorDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          const targetSection = sections[index];
          const container = document.querySelector('#container');
          const targetTop = targetSection.offsetTop - container.offsetTop;

          container.scrollTo({
            top: targetTop,
            behavior: 'smooth',
          });
        });
      });

      // ÏÑπÏÖò ÌÉÄÏù¥ÌãÄ ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏
      sectionTitles.forEach((title, index) => {
        title.addEventListener('click', () => {
          const targetSection = sections[index];
          const container = document.querySelector('#container');
          const targetTop = targetSection.offsetTop - container.offsetTop;

          container.scrollTo({
            top: targetTop,
            behavior: 'smooth',
          });
        });
      });

      // Ïä§ÌÅ¨Î°§ ÏÑ±Îä• ÏµúÏ†ÅÌôî
      let ticking = false;
      const container = document.querySelector('#container');

      container.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            updateScrollIndicator();
            ticking = false;
          });
          ticking = true;
        }
      });

      // Ïä§ÌÅ¨Î°§ ÌûåÌä∏ Í∏∞Îä•
      function showScrollHint() {
        scrollHint.style.opacity = '1';
        setTimeout(() => {
          scrollHint.style.opacity = '0';
        }, 3000);
      }

      // ÌéòÏù¥ÏßÄ Î°úÎìú ÌõÑ 2Ï¥à Îí§Ïóê Ïä§ÌÅ¨Î°§ ÌûåÌä∏ ÌëúÏãú
      setTimeout(() => {
        showScrollHint();
      }, 2000);

      // Ïä§ÌÅ¨Î°§ Ïãú ÌûåÌä∏ Ïà®Í∏∞Í∏∞
      container.addEventListener('scroll', () => {
        scrollHint.style.opacity = '0';
      });

      // Î™®Î∞îÏùº ÌÑ∞Ïπò Ïù¥Î≤§Ìä∏ ÏµúÏ†ÅÌôî
      if (isMobile()) {
        // ÎçîÎ∏î ÌÉ≠ Ï§å Î∞©ÏßÄ
        let lastTouchEnd = 0;
        document.addEventListener(
          'touchend',
          (e) => {
            const now = new Date().getTime();
            if (now - lastTouchEnd <= 300) {
              e.preventDefault();
            }
            lastTouchEnd = now;
          },
          false,
        );

        // Ïä§ÌÅ¨Î°§ ÏÑ±Îä• ÏµúÏ†ÅÌôî
        container.addEventListener(
          'touchstart',
          () => {
            container.style.overflow = 'hidden';
          },
          { passive: true },
        );

        container.addEventListener(
          'touchend',
          () => {
            container.style.overflow = 'scroll';
          },
          { passive: true },
        );

        // Î™®Î∞îÏùºÏóêÏÑú Ïä§ÌÅ¨Î°§ Ïù∏ÎîîÏºÄÏù¥ÌÑ∞ÏôÄ ÏÑπÏÖò ÌÉÄÏù¥ÌãÄ Ïà®Í∏∞Í∏∞
        if (scrollIndicator) scrollIndicator.style.display = 'none';
        if (document.getElementById('sectionTitles')) {
          document.getElementById('sectionTitles').style.display = 'none';
        }
        if (scrollHint) scrollHint.style.display = 'none';

        // Î™®Î∞îÏùºÏóêÏÑú ÌñÑÎ≤ÑÍ±∞ Î©îÎâ¥ ÌëúÏãú
        if (hamburgerMenu) hamburgerMenu.style.display = 'flex';
      }

      // ÌîåÎ°úÌåÖ Î©îÎâ¥ Í∏∞Îä•
      const floatingMenu = document.getElementById('floatingMenu');
      const floatingMainBtn = document.getElementById('floatingMainBtn');
      const floatingCallBtn = document.getElementById('floatingCallBtn');
