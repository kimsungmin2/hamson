      // ÎπÑÎîîÏò§ ÏÉÅÌÉú Î≥ÄÍ≤Ω Í∞êÏßÄ
      video.addEventListener('play', () => {
        isPlaying = true;
      });

      video.addEventListener('pause', () => {
        isPlaying = false;
      });

      // ÎßàÏö∞Ïä§Í∞Ä ÏÑπÏÖò1Ïóê ÏûàÏùÑ ÎïåÎßå Ïª®Ìä∏Î°§ ÌëúÏãú
      const section1 = document.getElementById('section1');
