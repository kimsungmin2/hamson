      // Ï¥àÍ∏∞ ÏÉÅÌÉú ÏÑ§Ï†ï
      videoControls.style.opacity = '0.3';

      // ÎπÑÎîîÏò§ Î°úÎî© ÏµúÏ†ÅÌôî
      video.addEventListener('loadeddata', () => {
